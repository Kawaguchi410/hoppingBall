<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.hoppingball.MainActivity">


    <ImageView
        android:id="@+id/EMTHB"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <SurfaceView
            android:id="@+id/surfaceView_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/easyModeStart"
            android:text="Easy"
            android:textSize="30dp"
            android:onClick="easyButton"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="70dp"></Button>

        <Button
            android:id="@+id/normalModeStart"
            android:text="Normal"
            android:textSize="30dp"
            android:onClick="normalButton"
            android:layout_width="200dp"
            android:layout_height="100dp"
            tools:layout_editor_absoluteX="180dp"
            tools:layout_editor_absoluteY="260dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="200dp"></Button>

        <Button
            android:id="@+id/hardModeStart"
            android:text="Hard"
            android:textSize="30dp"
            android:onClick="hardButton"
            android:layout_width="200dp"
            android:layout_height="100dp"
            tools:layout_editor_absoluteX="180dp"
            tools:layout_editor_absoluteY="260dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="330dp"></Button>

        <Button
            android:id="@+id/continueSuru"
            android:text="Continue"
            android:textSize="30dp"
            android:onClick="continueButton"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="220dp"></Button>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
